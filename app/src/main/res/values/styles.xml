<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="home_bottom_tab_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:drawablePadding">6sp</item>
        <item name="android:textColor">@drawable/tab_indicator_text</item>
    </style>

    <style name="media_choose_btn">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/media_choose_opbtn_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

</resources>
